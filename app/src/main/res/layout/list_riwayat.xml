<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlListRiwayat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvIcRiwayat"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@color/jmlPemasukan"
        app:cardCornerRadius="34dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivIcRiwayat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_bullish" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvKeteranganRiwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/cvIcRiwayat"
        android:textColor="@color/primaryTextColor"
        tools:text="Kotak Amal" />

    <TextView
        android:id="@+id/tvTanggalRiwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvKeteranganRiwayat"
        android:layout_toRightOf="@id/cvIcRiwayat"
        android:textColor="@color/primaryTextColor"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        tools:text="12 Feb, 2022" />


    <TextView
        android:id="@+id/tvJmlUang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/jmlPemasukan"
        tools:text="+ Rp. 80.000" />

    <View
        android:id="@+id/garisListRiwayat"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tvTanggalRiwayat"
        android:background="@color/primaryTextColor" />

</RelativeLayout>