<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMenuInfoKas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".fragments.InfoKas2Fragment">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbInfoKas"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/tvAppBarInfoKas"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Uang Kas Masjid"
            android:textColor="@color/secondaryTextColor"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rlPbInfoKas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_below="@id/tbInfoKas">

        <ProgressBar
            android:id="@+id/pbInfoKas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rlViewInfoKas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@id/tbInfoKas">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/rounded_infokas">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Uang Kas"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textSize="20sp"
                    android:textColor="@color/primaryTextColor"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvJmlSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSaldo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="14dp"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rlTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvJmlSaldo"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rounded_transparan">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTanggalSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 Feb 2022"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvSaldo">

            <RelativeLayout
                android:id="@+id/rlRecyclerViewRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRiwayatUangKas"
                android:layout_marginBottom="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRiwayatInfoKas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlCatatKeuangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTambahDataKeuangan"
                android:layout_marginEnd="16dp">

                <RelativeLayout
                    android:id="@+id/rlButtonCatatKeuangan"
                    android:layout_width="92dp"
                    android:layout_height="84dp"
                    android:background="@drawable/rounded_catatkeuangan">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_home_catatkeuangan" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlButtonCatatKeuangan"
                    android:layout_centerHorizontal="true"
                    android:text="Catat\nKeuangan"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlCatatDonatur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTambahDataKeuangan"
                android:layout_toEndOf="@id/rlCatatKeuangan">

                <RelativeLayout
                    android:id="@+id/rlButtonCatatDonatur"
                    android:layout_width="92dp"
                    android:layout_height="84dp"
                    android:background="@drawable/rounded_catatdonatur">

                    <ImageView
                        android:id="@+id/ivButtonCatatDonatur"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_home_catatdonatur" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlButtonCatatDonatur"
                    android:layout_centerHorizontal="true"
                    android:text="Catat\nDonatur"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvInfoKasBlnIni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlRecyclerViewRiwayat"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="Info Uang Kas bulan Ini"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTambahDataKeuangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvPemasukanBlnIni"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="Tambah Data"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvLihatSemuaRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Lihat Semua"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRiwayatUangKas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="Riwayat Uang Kas"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPengeluaranBlnIni"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@id/tvInfoKasBlnIni"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/cvPemasukanBlnIni"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPengeluaranBlnIni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/cvIcPengeluaranBlnIni"
                        android:text="- Rp. 800.000"
                        android:textColor="@color/jmlPengeluaran"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvIcPengeluaranBlnIni"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/jmlPengeluaran"
                        app:cardCornerRadius="40dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivIcPengeluaranBlnIni"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_bearish" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPemasukanBlnIni"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@id/tvInfoKasBlnIni"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPemasukanBlnIni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/cvIcPemasukanBlnIni"
                        android:text="+ Rp. 800.000"
                        android:textColor="@color/jmlPemasukan"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvIcPemasukanBlnIni"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/jmlPemasukan"
                        app:cardCornerRadius="40dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivIcPemasukanBlnIni"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_bullish" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>