<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCatatPemasukan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CatatPemasukanActivity">

    <ProgressBar
        android:id="@+id/pbCatatPemasukan"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:outlineAmbientShadowColor="@color/primaryDarkColor"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbCatatPemasukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        style="@style/AppTheme.Toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbCatatPemasukan"
        android:padding="16dp">



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTglPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tanggal Pemasukan"
        android:textSize="18sp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etTanggalPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border_tambahdata"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Masukkan Tanggal"
        android:focusable="false"
        android:inputType="date"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTglPemasukan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvKetPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Keterangan Pemasukan"
        android:textSize="18sp"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etTanggalPemasukan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etKeteranganPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border_tambahdata"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Masukkan Keterangan"
        android:inputType="text"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvKetPemasukan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNominalPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nominal Pemasukan"
        android:textSize="18sp"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etKeteranganPemasukan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etNominalPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border_tambahdata"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Masukkan Nominal"
        android:inputType="date"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNominalPemasukan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDeskripsiPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi Pemasukan"
        android:textSize="18sp"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etNominalPemasukan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etDeskripsiPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border_tambahdata"
        android:ems="10"
        android:lines="3"
        android:hint="Masukkan Deskripsi (opsional)"
        android:padding="16dp"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDeskripsiPemasukan" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBatalPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_bg_orange"
        android:text="Batal"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSimpanPemasukan"
        app:layout_constraintTop_toBottomOf="@+id/etDeskripsiPemasukan" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpanPemasukan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_bg_primary"
        android:text="Simpan"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnBatalPemasukan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeskripsiPemasukan" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>