<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".fragments.PengaturanFragment">

    <View
        android:id="@+id/topViewPengaturan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/primaryColor"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/topViewPengaturanWave"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/topViewPengaturan"
        android:background="@drawable/wave"
        android:layout_marginTop="-1dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvAppBarPengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="40dp"
            android:text="Pengaturan"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAppBarPengaturan"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/transparan"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_white"
                android:paddingTop="82dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:id="@+id/tvNamaPengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:text="Lee Ruby"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEmailPengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNamaPengguna"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:text="Leeruby00@gmail.com"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvTipePengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEmailPengguna"
                    android:layout_centerHorizontal="true"
                    android:text="Admin"
                    android:layout_marginBottom="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />


                <RelativeLayout
                    android:id="@+id/rlBtnEditProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTipePengguna"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_masjidattaqwa">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="Edit Profile"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/garisPengaturan1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/rlBtnEditProfil"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/primaryColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/garisPengaturan1" />

                <View
                    android:id="@+id/garisPengaturan2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/rlBtnEditProfil"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/primaryColor" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@id/tvAppBarPengaturan"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="150dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profil" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>



</RelativeLayout>