<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF"
    tools:context=".fragments.KegiatanFragment">

    <View
        android:id="@+id/topViewHome"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@color/primaryColor" />

    <TextView
        android:id="@+id/tvAppBarKegiatanMasjid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:text="Kegiatan Masjid"
        android:textColor="@color/secondaryTextColor"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppBarKegiatanMasjid">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfoKegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <RelativeLayout
                    android:id="@+id/rlKegiatanSelanjutnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_primarytransparan">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kegiatan Selanjutnya"
                        android:textColor="@color/primaryColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvKeteranganKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengajian Rutin"
                    android:layout_below="@id/rlKegiatanSelanjutnya"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:textSize="24sp"
                    android:textColor="@color/primaryTextColor"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvKeteranganKegiatan">

                    <TableRow
                        android:layout_marginTop="20dip" >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTipeKegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipe"
                            android:layout_weight="2"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="18sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvValueTipeKegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=": Umum"
                            android:layout_weight="7"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="18sp"/>

                    </TableRow>


                    <TableRow
                        android:layout_marginTop="20dip" >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHariTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hari / Tanggal"
                            android:textColor="@color/primaryTextColor"
                            android:layout_weight="2"
                            android:textSize="18sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvValueHariTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=": Senin, 25 Feb 2022"
                            android:layout_weight="7"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="18sp"/>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="20dip" >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvWaktuKegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu"
                            android:layout_weight="2"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="18sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvValueWaktuKegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=": 19.30 WIB"
                            android:textColor="@color/primaryTextColor"
                            android:layout_weight="7"
                            android:textSize="18sp"/>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="20dip" >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTempatKegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tempat"
                            android:layout_weight="2"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="18sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvValueTempatKegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=": Masjid At-Taqwa"
                            android:layout_weight="7"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="18sp"/>

                    </TableRow>

                </TableLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvInfoKegiatan"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvJadwalKegiatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="Jadwal Kegiatan"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvLihatSemuaKegiatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Lihat Semua"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rlRecyclerViewKegiatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJadwalKegiatan"
                android:layout_marginBottom="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvTambahData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlRecyclerViewKegiatan"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:text="Tambah Data"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rlTambahKegiatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTambahData">

                <RelativeLayout
                    android:id="@+id/rlButtonTambahKegiatan"
                    android:layout_width="92dp"
                    android:layout_height="84dp"
                    android:background="@drawable/rounded_tambahkegiatan">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_home_tambahkegiatan" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlButtonTambahKegiatan"
                    android:layout_centerHorizontal="true"
                    android:text="Tambah\nKegiatan"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp" />
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>